# funcfinder Configuration for TDTP Framework
#
# This config is used by git hooks to auto-update code maps

# Path to funcfinder binary (relative or absolute)
FUNCFINDER_BIN=/tmp/funcfinder/funcfinder

# Output directory for analysis results
OUTPUT_DIR=docs/analysis

# Enable auto-update on commit (true/false)
AUTO_UPDATE_ON_COMMIT=true

# Auto-commit updated maps (true/false)
# Warning: This will amend your commit!
AUTO_COMMIT_MAPS=false

# Show detailed stats after update (true/false)
SHOW_STATS=true

# Generate additional reports (true/false)
GENERATE_DEPS=true
GENERATE_README=true
